<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/white_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111.6dp">
        <com.chanxa.linayi.views.imagebrowse.widget.PhotoView
            android:id="@+id/iv_goods"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginBottom="17.6dp"
            android:layout_marginTop="17.6dp"
            />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="x1"
            android:textColor="@color/order_item_detail_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.8dp"
            android:layout_marginTop="16.8dp"
            android:layout_toLeftOf="@id/tv_num"
            android:layout_toRightOf="@id/iv_goods"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
            android:textColor="@color/order_item_detail_text"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_below="@+id/tv_goods_name"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.8dp"
            >
            <TextView
                android:id="@+id/tv_market_name"
                android:layout_below="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.8dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_goods"
                android:maxLines="2"
                android:text="超市:大润发(福田店)"
                android:textColor="@color/order_item_detail_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_statue"
                android:layout_below="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_market_name"
                android:layout_toLeftOf="@id/tv_num"
                android:maxLines="2"
                android:text="购买状态：已购买"
                android:textColor="@color/order_item_detail_gray"
                android:textSize="13sp" />



        </LinearLayout>


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.8dp"
            android:layout_toLeftOf="@id/tv_num"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_below="@id/ll"
            android:text="¥999"
            android:textSize="15sp"
            android:gravity="bottom"
            android:textColor="@color/order_item_detail_text"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_buy"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/iv_goods"
        >

        <TextView
            android:id="@+id/tv_option1"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="76.2dp"
            android:layout_height="22.3dp"
            android:textColor="@color/order_item_detail_button"
            android:text="价格未买"
            android:background="@drawable/button_bg_180"
            />

        <TextView
            android:id="@+id/tv_option2"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="76.2dp"
            android:layout_height="22.3dp"
            android:textColor="@color/order_item_detail_button"
            android:text="缺货"
            android:background="@drawable/button_bg_180"
            />

        <TextView
            android:id="@+id/tv_option3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="76.2dp"
            android:layout_height="22.3dp"
            android:textColor="@color/order_item_detail_button"
            android:text="已买"
            android:background="@drawable/button_bg_180"
            />

    </RelativeLayout>


</LinearLayout>