<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_black_progress_dialog">

    <com.chanxa.linayi.views.ProgressWheel
        android:id="@+id/toast_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        wheel:wheel_barColor="@color/theme_color"
        wheel:wheel_progressIndeterminate="true"
        wheel:wheel_rimColor="@color/white" />

</FrameLayout>