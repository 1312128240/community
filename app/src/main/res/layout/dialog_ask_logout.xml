<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="248.9dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_bg_15_dialog"
        >

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="48.8dp"
            android:background="@drawable/button_bg_15_dialog_red"
            android:textColor="@color/white_color"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确定要退出当前登录"
            android:lineSpacingExtra="3dp"
            />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="124dp"
            android:layout_height="48.8dp"
            android:layout_below="@id/tv_tip"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/password_mistake_color"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_alignParentRight="true"
            android:layout_width="124dp"
            android:layout_height="48.8dp"
            android:layout_below="@id/tv_tip"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/password_mistake_color"
            />

        <View
            android:layout_width="0.9dp"
            android:layout_height="48.8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_tip"
            android:background="@color/line_color"
            />
    </RelativeLayout>
</LinearLayout>