<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:layout_marginTop="1dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/white_color">

    <ImageView
        android:id="@+id/iv_goods"
        android:scaleType="fitXY"
        android:background="@drawable/iv_border"
        android:transitionName="share"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="17.6dp"
        android:layout_marginTop="17.6dp"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9.8dp"
        android:layout_marginTop="16.8dp"
        android:layout_toEndOf="@id/iv_goods"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="商品名称"
        android:textColor="@color/order_item_detail_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9.8dp"
        android:layout_toEndOf="@id/iv_goods"
        android:layout_below="@id/tv_goods_name"
        android:text="¥0.00"
        android:textSize="15sp"
        android:gravity="bottom"
        android:textColor="@color/order_item_detail_text"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="x0"
        android:textSize="15sp"
        android:textColor="@color/order_item_detail_text"/>

</RelativeLayout>