<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_my_dialog_parent"
    android:layout_width="match_parent"
    android:background="@drawable/textview_border2"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_alter_dialog_hint"
        android:layout_marginTop="10dp"
        android:text="提示"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_alter_dialog_title"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_below="@+id/tv_alter_dialog_hint"
        android:text="信息内容"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_alter_dialog_title"
        android:background="#B7B6BB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_alter_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_alter_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="取消"
            android:textColor="#2DBDFA" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B7B6BB" />

        <TextView
            android:id="@+id/tv_alter_dialog_sure"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#2DBDFA" />
    </LinearLayout>
</RelativeLayout>