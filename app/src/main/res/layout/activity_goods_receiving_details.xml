<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F3F3F3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/actionbar"
        layout="@layout/base_actionbar" />


    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionbar">

        <TextView
            android:id="@+id/tv_task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务ID ：xxxxx"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/tv_supermarket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_task_id"
            android:layout_marginTop="8.6dp"
            android:text="超市名称：xxxxx"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="订单ID ：xxxxx"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/tv_procurement_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_order_id"
            android:layout_marginTop="8.6dp"
            android:text="采买员 ：xxxxx"
            android:textColor="@color/black_color" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_one">

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品数量 ：0"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/tv_service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_num"
            android:layout_marginTop="8.6dp"
            android:text="服务费：0"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/tv_purchase_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="购买数量 ：0"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_purchase_quantity"
            android:layout_marginTop="8.6dp"
            android:text="金额总计：0"
            android:textColor="@color/black_color" />



        <com.chanxa.linayi.views.imagebrowse.widget.PhotoView
            android:id="@+id/iv_goods"
            android:layout_below="@+id/tv_service_charge"
            tools:src="@drawable/ic_launcher"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="17.6dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_alignTop="@+id/iv_goods"
            android:layout_below="@+id/tv_service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_goods"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="@color/order_item_detail_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_name"
            android:layout_toRightOf="@+id/iv_goods"
            android:gravity="bottom"
            android:text="¥0.00"
            android:textColor="@color/order_item_detail_text"
            android:textSize="15sp" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/rl_check"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingRight="10dp"
        android:background="@color/white_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_check_completed"
            android:layout_width="74.4dp"
            android:layout_height="27.8dp"
            android:layout_gravity="center|end"
            android:background="@drawable/button_bg_5_rob"
            android:gravity="center"
            android:text="@string/finished_check"
            android:textColor="@color/theme_color" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>