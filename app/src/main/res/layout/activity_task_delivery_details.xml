<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.chanxa.linayi.uis.Task.TaskDeliveryDetailsActivity">

     <include android:id="@+id/actionbar"
         layout="@layout/base_actionbar"/>


    <RelativeLayout
        android:id="@+id/rl_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            tools:text="下单时间：11-11 11:11" />

        <TextView
            android:id="@+id/tv_ordersId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_color"
            tools:text="订单编号：0000" />

        <TextView
            android:id="@+id/tv_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordersId"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_color"
            tools:text="收  货  人：张三 1353254862" />

      <!--  <TextView
            android:id="@+id/tv_task_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_buyer"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_color"
            android:text="配送地址：" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_toEndOf="@+id/tv_task_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_buyer"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="@color/black_color"
            tools:text="泰然九路11号" />
-->
        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black_color"
            tools:text="xx" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_delivery_details"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
