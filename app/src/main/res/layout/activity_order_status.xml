<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.chanxa.linayi.uis.Order.OrderStatusActivity">

    <include
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/actionbar"
        layout="@layout/base_actionbar"
        android:layout_height="60dp"
        android:layout_width="0dp" />



    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:background="@color/theme_color"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        app:tabIndicatorFullWidth="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabIndicatorColor="@color/white_color"
        app:tabSelectedTextColor="@color/white_color"
        app:tabTextColor="@color/white_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>


    <include
        android:id="@+id/ll_title"
        app:layout_constraintTop_toBottomOf="@+id/tablayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/item_delivery_list"/>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
