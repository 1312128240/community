<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chanxa.linayi">

    <!-- Required  一些系统要求的权限，如访问网络等 -->
    <uses-permission android:name="com.chanxa.chookr.permission.JPUSH_MESSAGE" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- Optional for location -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 用于开启 debug 版本的应用在6.0 系统上 层叠窗口权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- ******************************极光推送结束********************************** -->


    <!-- ****************************腾讯Bugly开始************************************* -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- ****************************腾讯Bugly结束************************************* -->


    <!-- ****************************版本更新权限开始************************************* -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ****************************版本更新权限结束************************************* -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/start"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".uis.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".uis.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 个人设置,找加密码 -->
        <activity
            android:name=".uis.login.FindPasswordActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.Personal.SettingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 订单 -->
        <activity
            android:name=".uis.Order.OrderStatusActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.Order.OrderDetailNewActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 任务 -->
        <activity
            android:name=".uis.Task.TaskDeliveryDetailsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.Task.TaskHomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name=".uis.Task.TaskProcurementkDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <!-- 收贷 -->
        <activity
            android:name=".uis.Receiving.ReceivingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.Receiving.GoodsReceivingDetailsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 装箱 -->
        <activity
            android:name=".uis.Binning.BinningActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.Binning.BinningDetailsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <!-- 配送 -->
        <activity
            android:name=".uis.Delivery.DeliveryDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".uis.Delivery.DeliveryActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 选择图片 -->
        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard" />
        <activity
            android:name=".uis.ZoomActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>

</manifest>